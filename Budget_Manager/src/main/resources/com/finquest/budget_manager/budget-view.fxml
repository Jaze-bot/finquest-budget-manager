<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.finquest.budget_manager.BudgetController" stylesheets="@styles.css">

    <!-- Left Sidebar -->
    <left>
        <VBox spacing="20" style="-fx-background-color: #1a5276; -fx-padding: 20;" prefWidth="180">
            <Label text="FQ" style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold;" />
            <VBox spacing="10">
                <Button text="ðŸ  Home" styleClass="menu-button" onAction="#handleHome" />
                <Button text="ðŸ’° Expenses" styleClass="menu-button" onAction="#handleExpenses" />
                <Button text="ðŸ“ˆ Income" styleClass="menu-button" onAction="#handleIncome" />
                <Button text="ðŸ“Š Transactions" styleClass="menu-button" onAction="#handleTransactions" />
                <Button text="ðŸ“‹ Summary" styleClass="menu-button" onAction="#handleSummary" />
            </VBox>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="25" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

            <!-- Budget Cards -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <VBox styleClass="budget-card" spacing="5">
                    <Label text="Left to spend" styleClass="card-label" />
                    <Label fx:id="leftToSpendLabel" text="$ 0.00" styleClass="card-amount" />
                </VBox>
                <VBox styleClass="budget-card" spacing="5">
                    <Label text="Monthly budget" styleClass="card-label" />
                    <Label fx:id="monthlyBudgetLabel" text="$ 0.00" styleClass="card-amount" />
                </VBox>
            </HBox>

            <!-- Recent Transactions -->
            <VBox spacing="10">
                <Label text="Recent Transactions" styleClass="section-title" />
                <TableView fx:id="transactionsTable" styleClass="transactions-table" prefHeight="180">
                    <columns>
                        <TableColumn text="Title" prefWidth="120">
                            <cellValueFactory>
                                <PropertyValueFactory property="title" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Category" prefWidth="100">
                            <cellValueFactory>
                                <PropertyValueFactory property="category" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Type" prefWidth="80">
                            <cellValueFactory>
                                <PropertyValueFactory property="type" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Amount" prefWidth="90">
                            <cellValueFactory>
                                <PropertyValueFactory property="amount" />
                            </cellValueFactory>
                        </TableColumn>
                        <TableColumn text="Date" prefWidth="90">
                            <cellValueFactory>
                                <PropertyValueFactory property="date" />
                            </cellValueFactory>
                        </TableColumn>
                    </columns>
                </TableView>
            </VBox>

            <!-- Add New Transaction -->
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;">
                <Label text="Add New Transaction" styleClass="section-title" />
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints prefWidth="100" />
                        <ColumnConstraints prefWidth="150" />
                        <ColumnConstraints prefWidth="80" />
                    </columnConstraints>

                    <Label text="Title:" GridPane.columnIndex="0" styleClass="form-label" />
                    <TextField fx:id="transactionTitleField" promptText="Enter title" GridPane.columnIndex="1" />

                    <Label text="Category:" GridPane.columnIndex="2" styleClass="form-label" />
                    <ComboBox fx:id="categoryComboBox" promptText="Select category" GridPane.columnIndex="3" />

                    <Label text="Type:" GridPane.columnIndex="0" styleClass="form-label" />
                    <ComboBox fx:id="typeComboBox" promptText="Income/Expense" GridPane.columnIndex="1" />

                    <Label text="Amount:" GridPane.columnIndex="2" styleClass="form-label" />
                    <TextField fx:id="amountField" promptText="0.00" GridPane.columnIndex="3" />

                    <Label text="Date:" GridPane.columnIndex="0" styleClass="form-label" />
                    <TextField fx:id="dateField" promptText="MM/DD/YYYY" GridPane.columnIndex="1" />

                    <Button text="Add +" onAction="#handleAddTransaction" GridPane.columnIndex="4"
                            styleClass="add-button" GridPane.rowSpan="2" />
                </GridPane>
            </VBox>
        </VBox>
    </center>
</BorderPane>