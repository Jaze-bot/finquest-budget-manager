    <VBox VBox.vgrow="ALWAYS" />

    <HBox alignment="BOTTOM_RIGHT">
        <Button fx:id="saveButton" text="Save Settings" styleClass="add-button" onAction="#handleSave" />
    </HBox>

</VBox>