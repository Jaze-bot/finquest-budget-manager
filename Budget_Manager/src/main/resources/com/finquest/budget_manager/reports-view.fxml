<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.finquest.budget_manager.ReportsController"
      spacing="20" style="-fx-padding: 25;" styleClass="main-view"
      minHeight="600" onMousePressed="#clearSelection">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Financial Report" styleClass="header-title" />
        <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT" spacing="10">
            <Label text="Filter by Type:" styleClass="form-group-label" />
            <ComboBox fx:id="transactionTypeFilter" promptText="Select Type" styleClass="form-group-field" />
        </HBox>
    </HBox>

    <HBox spacing="20" alignment="CENTER_LEFT" onMousePressed="#consumeClick">
        <VBox styleClass="budget-card" spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ’° Total Income" styleClass="card-label" />
            <Label fx:id="totalIncomeLabel" text="â‚±0.00" styleClass="card-amount, transaction-amount-in" />
        </VBox>
        <VBox styleClass="budget-card" spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ›ï¸ Total Expenses" styleClass="card-label" />
            <Label fx:id="totalExpensesLabel" text="â‚±0.00" styleClass="card-amount, transaction-amount-out" />
        </VBox>
        <VBox styleClass="budget-card" spacing="5" HBox.hgrow="ALWAYS">
            <Label text="ðŸ¦ Net Savings" styleClass="card-label" />
            <Label fx:id="netSavingsLabel" text="â‚±0.00" styleClass="card-amount" />
        </VBox>
    </HBox>

    <VBox spacing="20" onMousePressed="#consumeClick">
        <VBox styleClass="budget-card" spacing="10">
            <Label text="ðŸ“ˆ Monthly Income vs. Expense" styleClass="section-title" />
            <BarChart fx:id="monthlyBarChart" animated="false" legendVisible="true" prefHeight="250">
                <xAxis> <CategoryAxis label="Month" /> </xAxis>
                <yAxis> <NumberAxis label="Total Amount" /> </yAxis>
            </BarChart>
        </VBox>
        <HBox spacing="20">
            <VBox styleClass="budget-card" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="ðŸ’° Income Breakdown" styleClass="section-title" />
                <PieChart fx:id="incomeBreakdownChart" animated="true" legendVisible="false"
                          labelsVisible="true" prefHeight="250"/>
            </VBox>
            <VBox styleClass="budget-card" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="ðŸ° Expense Breakdown" styleClass="section-title" />
                <PieChart fx:id="expenseBreakdownChart" animated="true" legendVisible="false"
                          labelsVisible="true" prefHeight="250"/>
            </VBox>
        </HBox>
    </VBox>

    <VBox styleClass="budget-card" spacing="10" VBox.vgrow="ALWAYS" onMousePressed="#consumeClick">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Detailed Transactions" styleClass="section-title" />
            <HBox HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                <Button text="Export Report" fx:id="exportButton" styleClass="add-button"
                        onAction="#handleExportReport" />
            </HBox>
        </HBox>
        <TableView fx:id="transactionReportTable" styleClass="finquest-table-view" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titleCol" text="Title" prefWidth="250" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="categoryCol" text="Category" prefWidth="150" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="dateCol" text="Date" prefWidth="100" style="-fx-alignment: CENTER-LEFT;"/>
                <TableColumn fx:id="amountCol" text="Amount" prefWidth="120" style="-fx-alignment: CENTER-RIGHT;" />
            </columns>
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
        </TableView>
    </VBox>
</VBox>